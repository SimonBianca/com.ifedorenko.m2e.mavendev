<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.ifedorenko.m2e</groupId>
  <artifactId>com.ifedorenko.m2e.tychodev-parent</artifactId>
  <version>0.2.0-SNAPSHOT</version>
  <packaging>pom</packaging>

  <properties>
    <tycho-version>0.17.0</tycho-version>
  </properties>

  <repositories>
    <repository>
      <id>eclipse</id>
      <url>http://download.eclipse.org/releases/kepler</url>
      <layout>p2</layout>
    </repository>
    <repository>
      <id>m2e</id>
      <url>http://nexus.tesla.io:8081/nexus/content/sites/m2e.extras/m2e/1.4.0/N/LATEST/</url>
      <layout>p2</layout>
    </repository>
    <repository>
      <id>m2e-tycho</id>
      <url>http://nexus.tesla.io:8081/nexus/content/sites/m2e.extras/m2eclipse-tycho/0.7.0/N/0.7.0.201302171659/</url>
      <layout>p2</layout>
    </repository>
    <repository>
      <id>ifedorenk-m2e-extras</id>
      <url>http://ifedorenko.github.com/m2e-extras</url>
      <layout>p2</layout>
    </repository>
  </repositories>

  <modules>
    <module>com.ifedorenko.m2e.tychodev</module>
    <module>com.ifedorenko.m2e.tychodev.junit.runtime</module>
    <module>com.ifedorenko.m2e.tychodev.feature</module>
  </modules>

  <build>
    <plugins>
      <plugin>
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>tycho-maven-plugin</artifactId>
        <version>${tycho-version}</version>
        <extensions>true</extensions>
      </plugin>
    </plugins>
  </build>

</project>
